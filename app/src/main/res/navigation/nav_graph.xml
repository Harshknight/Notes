<?xml version="1.0" encoding="utf-8"?>
        <navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/registerFragment">

            <fragment
                android:id="@+id/mainFragment"
                android:name="com.example.notesapp.ui.note.MainFragment"
                android:label="MainFragment">
                <action
                    android:id="@+id/action_mainFragment_to_noteFragment"
                    app:destination="@id/noteFragment" />
            </fragment>
            <fragment
                android:id="@+id/registerFragment"
                android:name="com.example.notesapp.ui.login.RegisterFragment"
                android:label="RegisterFragment">
                <action
                    android:id="@+id/action_registerFragment_to_loginFragment"
                    app:destination="@id/loginFragment" />
                <action
                    android:id="@+id/action_registerFragment_to_mainFragment"
                    app:destination="@id/mainFragment"
                    app:popUpTo="@id/registerFragment"
                    app:popUpToInclusive="true" />
            </fragment>
            <fragment
                android:id="@+id/loginFragment"
                android:name="com.example.notesapp.ui.login.LoginFragment"
                android:label="fragment_register"
                tools:layout="@layout/fragment_register">
                <action
                    android:id="@+id/action_loginFragment_to_mainFragment"
                    app:destination="@id/mainFragment"
                    app:popUpTo="@id/registerFragment"
                    app:popUpToInclusive="true" />
            </fragment>
            <fragment
                android:id="@+id/profileFragment"
                android:name="com.example.notesapp.ui.profile.ProfileFragment"
                android:label="ProfileFragment" />
            <fragment
                android:id="@+id/noteFragment"
                android:name="com.example.notesapp.ui.note.NoteFragment"
                android:label="NoteFragment" />
        </navigation>